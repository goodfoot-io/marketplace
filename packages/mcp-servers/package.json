{
  "name": "@productivity-bot/mcp-servers",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "prettier": "prettier . --write --log-level warn",
    "prettier:files": "prettier --write --log-level warn",
    "eslint": "eslint --cache --fix ./src ./tests",
    "eslint:files": "eslint --cache --fix",
    "typecheck": "tsc --noEmit",
    "print": "cd ../.. && yarn print ./* packages/models/**/* documentation/description.md -e packages/models/demo -e yarn.lock -e CLAUDE.md -e print.mjs -e dependencies.mjs",
    "lint": "bash -c 'if [ $# -eq 0 ]; then yarn typecheck && yarn eslint && yarn prettier; else yarn typecheck && yarn eslint:files \"$@\" && yarn prettier:files \"$@\"; fi' --",
    "build": "yarn bundle && yarn copy-servers",
    "bundle": "tsx bundle-scripts.ts",
    "copy-servers": "cp ./dist/codebase-server.js /workspace/.devcontainer/utilities/codebase-mcp-server.mjs && cp ./dist/test-agent-server.js /workspace/.devcontainer/utilities/test-agent-mcp-server.mjs && cp ./dist/browser-server.js /workspace/.devcontainer/utilities/browser-mcp-server.mjs && cp ./dist/append-server.js /workspace/.devcontainer/utilities/file-mcp-server.mjs",
    "echo": "echo \"${0:-tests}\"",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules --no-node-snapshot ${INSPECT:+ --inspect-brk}\" NODE_ENV=test yarn exec jest --detectOpenHandles --runInBand -- ${*:-tests}"
  },
  "exports": {
    "./*": {
      "import": "./build/dist/src/*.js",
      "types": "./build/types/src/*.d.ts"
    }
  },
  "publishConfig": {
    "exports": {
      "./*": {
        "import": "./build/dist/src/*.js",
        "types": "./build/types/src/*.d.ts"
      }
    }
  },
  "files": [
    "build",
    "tsconfig.json"
  ],
  "devDependencies": {
    "@goodfoot/test-utilities": "workspace:^",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.3.1",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.28.0",
    "jest": "^29",
    "jest-diff": "^29",
    "jest-matcher-utils": "^29",
    "jest-util": "^30.0.2",
    "playwright": "next",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "tsx": "^4.20.5",
    "typescript": "^5.8.3",
    "ws": "^8.18.3"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^2.0.0",
    "@modelcontextprotocol/sdk": "^1.18.2",
    "@playwright/mcp": "^0.0.40",
    "@types/express": "^5.0.0",
    "@types/js-yaml": "^4.0.9",
    "express": "^4.21.2",
    "js-yaml": "^4.1.0"
  }
}
