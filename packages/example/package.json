{
  "name": "@goodfoot/example",
  "description": "Minimal example MCP server package demonstrating monorepo structure",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "prettier": "prettier . --write --log-level warn",
    "prettier:files": "prettier --write --log-level warn",
    "eslint": "eslint --cache --fix ./src ./tests",
    "eslint:files": "eslint --cache --fix",
    "typecheck": "tsc --noEmit",
    "postinstall": "yarn build",
    "lint": "bash -c 'if [ $# -eq 0 ]; then yarn typecheck && yarn eslint && yarn prettier; else yarn typecheck && yarn eslint:files \"$@\" && yarn prettier:files \"$@\"; fi' --",
    "build": "tsc --build",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules --no-node-snapshot ${INSPECT:+ --inspect-brk}\" NODE_ENV=test yarn exec jest --detectOpenHandles --runInBand -- ${*:-tests}",
    "release": "bash ../../scripts/release-package.sh example",
    "release:dry-run": "bash ../../scripts/release-package.sh example --dry-run"
  },
  "exports": {
    ".": {
      "import": "./build/dist/src/index.js",
      "types": "./build/types/src/index.d.ts"
    }
  },
  "files": [
    "build",
    "tsconfig.json"
  ],
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^29",
    "@types/node": "^22",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^9.28.0",
    "jest": "^29",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
