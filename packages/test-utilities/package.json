{
  "name": "@goodfoot/test-utilities",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "prettier": "prettier . --write --log-level warn",
    "prettier:files": "prettier --write --log-level warn",
    "eslint": "eslint --cache --fix ./src ./tests",
    "eslint:files": "eslint --cache --fix",
    "typecheck": "tsc --noEmit",
    "build": "tsc --build",
    "lint": "bash -c 'if [ $# -eq 0 ]; then yarn typecheck && yarn eslint && yarn prettier; else yarn typecheck && yarn eslint:files \"$@\" && yarn prettier:files \"$@\"; fi' --",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" NODE_ENV=test yarn exec jest --runInBand --detectOpenHandles -- tests",
    "release": "bash ../../scripts/release-package.sh test-utilities",
    "release:dry-run": "bash ../../scripts/release-package.sh test-utilities --dry-run"
  },
  "exports": {
    "./*": {
      "import": "./src/*.ts",
      "types": "./src/*.ts"
    }
  },
  "publishConfig": {
    "exports": {
      "./*": {
        "import": "./dist/*.js",
        "types": "./types/*.d.ts"
      }
    }
  },
  "devDependencies": {
    "@jest/environment": "^30.0.4",
    "@jest/expect-utils": "^29",
    "@jest/globals": "^29",
    "@jest/types": "^29",
    "@prettier/sync": "^0.6.1",
    "@types/jest": "^29",
    "@types/node": "^22",
    "@types/uuid": "^10",
    "eslint": "^9.28.0",
    "expect": "^29",
    "jest": "^29",
    "jest-environment-jsdom": "^30.0.4",
    "jest-environment-node": "^30.0.4",
    "jest-matcher-utils": "^29",
    "jest-util": "^30.0.2",
    "prettier": "^3.5.3",
    "ts-jest": "^29",
    "typescript": "^5.8.3",
    "uuid": "^11"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "p-queue": "^8.1.0",
    "postgres": "^3.4.7"
  }
}
