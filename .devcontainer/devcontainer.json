{
  "name": "Marketplace",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined",
    "--network=host"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "goodfoot.compare-branch",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "jackiotyu.git-worktree-manager",
        "yutengjing.vscode-mcp-bridge"
      ],
      "settings": {
        "git.path": "/usr/bin/git",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh"
          }
        },
        "git-worktree-manager.worktreePathTemplate": "/workspace/.worktrees",
        "git-worktree-manager.worktreeSubdirectoryTemplate": "worktree$INDEX",
        "git-worktree-manager.worktreePick.showAddToWorkspace": true,
        "git-worktree-manager.terminalCmdList": [
          "yarn install"
        ],
        "git-worktree-manager.terminalLocationInEditor": true,
        "git-worktree-manager.openInsideFolder": true,
        "typescript.preferences.includePackageJsonAutoImports": "off",
        "typescript.disableAutomaticTypeAcquisition": false,
        "typescript.tsserver.useSyntaxServer": "auto",
        "terminal.integrated.enableBell": true
      }
    }
  },
  "remoteUser": "node",
  "mounts": [
    "source=claude-code-bashhistory,target=/commandhistory,type=volume",
    "source=claude-code-config,target=/home/node/.claude,type=volume",
    "source=${localWorkspaceFolder}/.git,target=/workspace/.git,type=bind,consistency=cached"
  ],
  // Alternative mount configuration for worktrees (uncomment if needed):
  // "workspaceMount": "source=${localWorkspaceFolder}/..,target=/workspace-parent,type=bind,consistency=delegated",
  // "workspaceFolder": "/workspace-parent/${localWorkspaceFolderBasename}",
  "remoteEnv": {
    "TZ": "America/New_York",
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "CLAUDE_CONFIG_DIR": "/home/node/.claude",
    "POWERLEVEL9K_DISABLE_GITSTATUS": "true",
    "PATH": "${containerEnv:PATH}:/home/node/.local/bin:/workspace/.devcontainer/claude-code:/workspace/.devcontainer/utilities"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
  "postCreateCommand": "/workspace/.devcontainer/post-create.sh",
  "postStartCommand": "/workspace/.devcontainer/post-start.sh"
}
