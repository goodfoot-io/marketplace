{
  "name": "@tools/scrape",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "prettier": "prettier . --write",
    "prettier:files": "prettier --write",
    "eslint": "eslint --cache --fix ./src ./tests",
    "eslint:files": "eslint --cache --fix",
    "typecheck": "tsc --noEmit",
    "lint": "bash -c 'if [ $# -eq 0 ]; then yarn prettier && yarn eslint && yarn typecheck; else yarn prettier:files \"$@\" && yarn eslint:files \"$@\" && yarn typecheck; fi' --",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules --no-node-snapshot ${INSPECT:+ --inspect-brk}\" NODE_ENV=test jest --detectOpenHandles --runInBand ${*:-tests}"
  },
  "packageManager": "yarn@4.5.0",
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "18",
    "@types/turndown": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "express": "^4.21.2",
    "jest": "^29",
    "jest-diff": "^29",
    "jest-matcher-utils": "^29",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "tsx": "^4.20.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  },
  "dependencies": {
    "@joplin/turndown-plugin-gfm": "^1.0.62",
    "playwright": "^1.53.0",
    "turndown": "^7.2.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
