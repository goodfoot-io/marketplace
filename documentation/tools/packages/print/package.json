{
  "name": "@tools/print",
  "version": "1.0.0",
  "description": "Print filesystem structure and dependencies",
  "sideEffects": false,
  "type": "module",
  "files": [
    "src"
  ],
  "scripts": {
    "prettier": "prettier . --write",
    "prettier:files": "prettier --write",
    "eslint": "eslint --cache --fix ./src ./tests",
    "eslint:files": "eslint --cache --fix",
    "typecheck": "tsc --noEmit",
    "lint": "bash -c 'if [ $# -eq 0 ]; then yarn prettier && yarn eslint && yarn typecheck; else yarn prettier:files \"$@\" && yarn eslint:files \"$@\" && yarn typecheck; fi' --",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules --no-node-snapshot ${INSPECT:+ --inspect-brk}\" NODE_ENV=test jest --detectOpenHandles --runInBand ${*:-tests}",
    "print": "print-filesystem ${*:-\"**/*\"}",
    "inverse-dependencies": "print-inverse-dependencies",
    "dependencies": "print-dependencies"
  },
  "packageManager": "yarn@4.5.0",
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/jest": "^29.5.14",
    "@types/node": "18",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^16.2.0",
    "jest": "^29",
    "jest-diff": "^29",
    "jest-matcher-utils": "^29",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "tsx": "^4.20.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  },
  "dependencies": {
    "@manypkg/get-packages": "^2.2.2",
    "dependency-tree": "^11.1.1",
    "fuzzball": "^2.1.2",
    "glob": "^10.3.10",
    "glob-gitignore": "^1.0.14",
    "istextorbinary": "^9.5.0",
    "js-yaml": "^4.1.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
