#!/usr/bin/env tsx

// Example of how to create a new CLI tool in the bin directory

// Import from packages in the monorepo
import { someFunction } from '../packages/your-package/src/lib/your-module.js';

// Parse command line arguments
function parseArgs(args: string[]): { option1: string; option2?: boolean } {
  // Your argument parsing logic here
  return { option1: args[0] || 'default' };
}

// Main function
async function main() {
  const args = process.argv.slice(2);
  
  if (args.length === 0) {
    console.error('Usage: your-tool <option1> [--flag]');
    process.exit(1);
  }
  
  const options = parseArgs(args);
  
  try {
    // Your tool's logic here
    const result = await someFunction(options);
    console.log(result);
  } catch (error) {
    console.error('Error:', error instanceof Error ? error.message : String(error));
    process.exit(1);
  }
}

// Execute main function
main().catch((error) => {
  console.error('Unexpected error:', error);
  process.exit(1);
});

