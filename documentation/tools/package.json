{
  "name": "@tools/monorepo",
  "version": "1.0.0",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "bin": {
    "print-dependencies": "./bin/print-dependencies",
    "print-filesystem": "./bin/print-filesystem",
    "print-inverse-dependencies": "./bin/print-inverse-dependencies",
    "rules-check": "./bin/rules-check",
    "rules-drift": "./bin/rules-drift"
  },
  "scripts": {
    "reset": "find . -type d -name node_modules | xargs rm -rf && rm -rf yarn.lock",
    "knip": "knip --config ./knip.config.json",
    "knip:fix": "knip --fix --config ./knip.config.json",
    "print": "./bin/print-filesystem",
    "inverse-dependencies": "./bin/print-inverse-dependencies",
    "dependencies": "./bin/print-dependencies",
    "check": "./bin/rules-check",
    "rules-drift": "./bin/rules-drift",
    "build": "tsc --build",
    "bundle": "node bundle-scripts.js",
    "lint": "eslint . --ext .ts,.js,.mjs",
    "lint:fix": "eslint . --ext .ts,.js,.mjs --fix"
  },
  "private": true,
  "packageManager": "yarn@4.9.2",
  "devDependencies": {
    "@changesets/get-dependents-graph": "^2.1.3",
    "@eslint/js": "^9.27.0",
    "@types/node": "^22.15.24",
    "esbuild": "^0.25.6",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.1",
    "eslint-plugin-import": "^2.31.0",
    "knip": "^5.59.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0"
  },
  "dependencies": {
    "glob-gitignore": "^1.0.15",
    "ignore": "^7.0.5",
    "istextorbinary": "^9.5.0"
  }
}
