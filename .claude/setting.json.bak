{
  "permissions": {
    "allow": [],
    "deny": ["NotebookRead", "NotebookEdit"],
    "defaultMode": "bypassPermissions"
  },
  "env": {
    "MAX_MCP_OUTPUT_TOKENS": "100000"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "(Write|Edit|MultiEdit)",
        "hooks": [
          {
            "type": "command",
            "command": "/workspace/.devcontainer/utilities/claude-pretooluse-hook-eslint-typescript-bypass",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "(Write|Edit|MultiEdit)",
        "hooks": [
          {
            "type": "command",
            "command": "/workspace/.devcontainer/utilities/claude-pretooluse-hook-jest-mock-prevention",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "(Write|Edit|MultiEdit)",
        "hooks": [
          {
            "type": "command",
            "command": "/workspace/.devcontainer/utilities/claude-posttooluse-hook-typescript",
            "timeout": 30
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo -e '\\a'"
          }
        ]
      }
    ]
  }
}